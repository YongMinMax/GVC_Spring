<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.waveware.mapper.UserMapper">


	<select id="userList" resultType="com.waveware.dto.UserDTO">
		SELECT 
			*
			FROM 
			user
			LIMIT 5 OFFSET 0;

	</select>
	
	<select id="getCount" resultType="java.lang.String">
		SELECT 
			count(*)
			FROM 
			user
	</select>
	<delete id="delUser" parameterType="int">
		DELETE 
			from 
			user
			WHERE user_idx = #{idx};			
	</delete>
